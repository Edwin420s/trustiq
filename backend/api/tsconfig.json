{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "types": ["node"],
    "baseUrl": ".",
    "paths": {
      "@trustiq/shared-config": ["../../shared/config/src"],
      "@trustiq/shared-types": ["../../shared/types/src"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
