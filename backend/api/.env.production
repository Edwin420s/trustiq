# Production Environment Configuration

# Database
DATABASE_URL="postgresql://trustiq:${DB_PASSWORD}@production-db.trustiq.xyz:5432/trustiq"

# Redis
REDIS_URL="redis://production-redis.trustiq.xyz:6379"

# JWT
JWT_SECRET="${PRODUCTION_JWT_SECRET}"
JWT_EXPIRES_IN="7d"

# Sui Blockchain
SUI_RPC_URL="https://fullnode.mainnet.sui.io:443"
DEPLOYER_PRIVATE_KEY="${PRODUCTION_DEPLOYER_PRIVATE_KEY}"
ORACLE_PRIVATE_KEY="${PRODUCTION_ORACLE_PRIVATE_KEY}"

# OAuth Providers
GITHUB_CLIENT_ID="${PRODUCTION_GITHUB_CLIENT_ID}"
GITHUB_CLIENT_SECRET="${PRODUCTION_GITHUB_CLIENT_SECRET}"
LINKEDIN_CLIENT_ID="${PRODUCTION_LINKEDIN_CLIENT_ID}"
LINKEDIN_CLIENT_SECRET="${PRODUCTION_LINKEDIN_CLIENT_SECRET}"

# IPFS
IPFS_API_URL="https://ipfs.infura.io:5001"
IPFS_API_KEY="${PRODUCTION_IPFS_API_KEY}"

# AWS
AWS_ACCESS_KEY_ID="${PRODUCTION_AWS_ACCESS_KEY_ID}"
AWS_SECRET_ACCESS_KEY="${PRODUCTION_AWS_SECRET_ACCESS_KEY}"
AWS_REGION="us-east-1"

# Server
NODE_ENV="production"
API_PORT="3001"

# Monitoring
SENTRY_DSN="${PRODUCTION_SENTRY_DSN}"
DATADOG_API_KEY="${PRODUCTION_DATADOG_API_KEY}"

# Feature Flags
FEATURE_WEB3_AUTH="true"
FEATURE_SOCIAL_VERIFICATION="true"
FEATURE_AI_SCORING="true"
FEATURE_BLOCKCHAIN_INTEGRATION="true"
FEATURE_REAL_TIME_UPDATES="true"
FEATURE_ADVANCED_ANALYTICS="true"