# Core environment
NODE_ENV=development

# Database & Cache
DATABASE_URL=postgresql://trustiq:password@localhost:5432/trustiq
REDIS_URL=redis://localhost:6379

# JWT
JWT_SECRET=replace-with-strong-secret-min-32-chars
JWT_EXPIRES_IN=7d

# Sui / Blockchain
SUI_RPC_URL=https://fullnode.mainnet.sui.io:443
SUI_FAUCET_URL=https://faucet.devnet.sui.io/gas
DEPLOYER_PRIVATE_KEY=replace-with-hex-or-base64-key

# OAuth Providers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# IPFS / Storage
IPFS_API_URL=https://ipfs.infura.io:5001
IPFS_API_KEY=your-ipfs-key

# AWS (optional)
AWS_ACCESS_KEY_ID=your-aws-key
AWS_SECRET_ACCESS_KEY=your-aws-secret
AWS_REGION=us-east-1

# Ports
API_PORT=3001
AI_ENGINE_PORT=8000
